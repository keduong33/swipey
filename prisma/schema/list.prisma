model List {
    id          String     @id @default(dbgenerated("gen_random_uuid()"))
    name        String
    description String?
    visibility  Visibility @default(PRIVATE)
    items       Item[]
    lastPlayed  DateTime
    status      Status     @default(NEW)
    categories  Category[]

    User   User   @relation(fields: [userId], references: [id])
    userId String
}

enum Visibility {
    PUBLIC
    PRIVATE
    FRIENDS
}

enum Status {
    COMPLETED
    IN_PROGRESS
    NEW
}

model Category {
    id    String @id @default(uuid())
    name  String @unique
    lists List[]
}
